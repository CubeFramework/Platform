<Grid 	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="1024"
        x:Name="LayoutRoot"
        Width="1280"
        Height="650">

    <Rectangle Fill="#7F000000"
               Margin="0" />
    <Grid HorizontalAlignment="Center"
          Height="31.5"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="548.39" />
            <ColumnDefinition Width="Auto"
                              MinWidth="33.684" />
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap"
                   Text="{Binding Path = TransactionContext.Message}"
                   VerticalAlignment="Center"
                   Style="{DynamicResource Mawaqif_ErrorMessage_LeftAlign_TextStyle}"
                   HorizontalAlignment="Right" Margin="0,0,8,0" />
         

    </Grid>

</Grid>